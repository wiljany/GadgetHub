@model GadgetHub.Domain.Entities.Gadgets

<div class="card p-3 bg-light text-dark mb-2">
	@if (Model.ImageData != null)
	{
		<div class="pull-left" style="margin-right: 10px">
			<img class="img-thumbnail" width="75" height="75"
				 src="@Url.Action("GetImage", "Gadget", new { Model.GadgetId })" />
		</div>
	}
	<h3>
		<strong>@Model.Name</strong>
		<span class="badge bg-success float-end">
			@Model.Price.ToString("c")
		</span>
	</h3>
	<span class="lead">@Model.Description</span>
	<span class="lead">@Model.Brand</span>


	@using (Html.BeginForm("AddToCart", "Cart"))
	{
		<div class="float-end">
			@Html.HiddenFor(x => x.GadgetId)
			@Html.Hidden("returnUrl", Request.Url.PathAndQuery)
			<input type="submit" class="btn btn-outline-success" value="Add to cart" />
		</div>
	}
</div>