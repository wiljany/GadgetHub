@model IEnumerable<GadgetHub.Domain.Entities.Gadgets>

@{
    ViewBag.Title = "Admin: All Gadgets";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
	<div class="card-header">
		<h3>All Gadgets</h3>
	</div>
	<div class="card-body">
		<div class="float-end mb-1">
			@Html.ActionLink("Add a new gadget", "Create", null, new { @class = "btn btn-success" })
		</div>
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th class="text-right">ID</th>
				<th>Name</th>
				<th>Brand</th>
				<th>Description</th>
				<th>Category</th>
				<th class="text-right">Price</th>
				<th class="text-center">Actions</th>
			</tr>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.GadgetId</td>
					<td>
						@Html.ActionLink(item.Name, "Edit", new { item.GadgetId })
					</td>
					<td>@item.Brand</td>
					<td>@item.Description</td>
					<td>@item.Category</td>
					<td>@item.Price.ToString("c")</td>
					<td class="text-center">
						@using (Html.BeginForm("Delete", "Admin"))
						{
							@Html.Hidden("GadgetId", item.GadgetId)
							<input type="submit" class="btn btn-danger" value="Delete" />
						}
					</td>
				</tr>
			}
		</table>
	</div>
</div>